{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "tsBuildInfoFile": ".next/cache/tsconfig.tsbuildinfo",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/components/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/types/*": ["./src/types/*"],
      "@/test/*": ["./src/test/*"]
    },
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": false,
    "noUncheckedIndexedAccess": false
  },
  "include": [
    "next-env.d.ts", 
    "**/*.ts", 
    "**/*.tsx", 
    ".next/types/**/*.ts",
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "dist",
    "build",
    "**/*.template.ts",
    "**/*.template.tsx",
    "vitest*.config.ts",
    "src/test/**",
    "src/lib/__tests__/**",
    "src/app/examples/**",
    "src/components/examples/**",
    "src/hooks/**",
    "src/lib/ai-*.ts",
    "src/lib/template-engine.ts",
    "src/lib/theme-*.ts",
    "src/lib/code-*.ts",
    "src/lib/performance-*.ts",
    "src/lib/bundle-*.ts",
    "src/lib/quality-*.ts",
    "src/lib/feedback-*.ts",
    "src/lib/sharing/*.ts",
    "src/lib/prompts/**/*.ts",
    "src/lib/test-generator.ts",
    "src/lib/style-guide.ts",
    "src/lib/continuous-improvement.ts",
    "src/lib/maintenance-system.ts",
    "src/lib/lazy-registry.ts",
    "src/components/performance/**",
    "src/lib/error-handler.ts",
    "src/lib/development-stage-manager.ts",
    "src/lib/component-metadata-system.ts",
    "src/lib/component-documentation-generator.ts",
    "src/lib/examples/**",
    "src/lib/api-client.ts",
    "src/lib/api-documentation-templates.ts",
    "src/lib/generation-optimizer.ts",
    "src/lib/helpers.ts",
    "src/lib/ide-integration.ts",
    "src/lib/template-marketplace.ts",
    "src/components/ui/enhanced-input.tsx",
    "src/lib/ai-component-generator.ts",
    "src/lib/ai-component-registry.ts",
    "src/lib/theme-system.ts",
    "src/lib/maintenance-system.ts",
    "src/lib/feedback/feedback-system.ts",
    "src/lib/template-marketplace.ts",
    "src/lib/component-metadata-system.ts",
    "src/lib/component-documentation-generator.ts",
    "src/lib/development-stage-manager.ts",
    "src/lib/helpers.ts",
    "src/lib/api-client.ts",
    "src/lib/api-documentation-templates.ts",
    "src/lib/theme-system.ts",
    "src/app/api/health/route.ts"
  ]
}